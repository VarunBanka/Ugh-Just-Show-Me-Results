{
  "manifest_version": 3,
  "name": "Ugh, Just Show Me Results",
  "version": "1.1",
  "description": "Removes Google’s sponsored results, AI clutter, and tracking. Clean, distraction-free search—just like it used to be.",
  "permissions": [
    "declarativeNetRequest",
    "storage"
  ],
  "host_permissions": [
    "*://*.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/16.png",
      "48": "images/48.png",
      "128": "images/128.png"
    }
  },
  "icons": {
    "16": "images/16.png",
    "48": "images/48.png",
    "128": "images/128.png"
  }
}
